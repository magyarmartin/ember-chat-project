{{#if deleteFail}}
  <div class="alert alert-danger">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <strong>Warning!</strong> Only the creator of the post, can delete of edit it!
  </div>
{{/if}}
<div class="page-header">
    <h1>Chat with strangers!!</h1>
    <h4>(first you have to sign up or log in to chat)</h4>
</div>
<div class="body-content">
    {{#each model as |post|}}
        <div class="panel panel-primary">
          <div class="panel-heading bigger">{{post.user.email}}
              {{#if isLogedIn}}
                  <button class="btn btn-primary right" {{action "deletePost" post}}><span class="glyphicon glyphicon-remove"></span></button>
                  <button class="btn btn-primary right" {{action "editDialog" post}}  data-toggle="modal" data-target="#edit">Edit</button>
              {{/if}}
          </div>
          <div class="panel-body">{{post.text}}</div>
        </div>
    {{/each}}
    {{#if isLogedIn}}
    <form role="form">
      <div class="form-group">
        <label for="pwd">New comment:</label>
        <textarea class="form-control" rows="5" id="comment"></textarea>
      </div>
      <button type="submit" class="btn btn-default" {{action "sendPost"}}>Submit</button>
    </form>
    {{/if}}
</div>


<div id="edit" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Edit post</h4>
      </div>
      <form role="form">
      <div class="modal-body">
          <div class="form-group">
            <textarea class="form-control" rows="5" id="edit-comment"></textarea>
          </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary" {{action "editPost"}}>Submit</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
      </div>
       </form>
    </div>

  </div>
</div>

