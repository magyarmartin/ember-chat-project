<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 nopadding">

            <nav class="navbar navbar-inverse">
              <div class="container-fluid">
                <div class="navbar-header">
                  <a class="navbar-brand" href="#">Little chat</a>
                </div>

                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                  
                  <ul class="nav navbar-nav navbar-right">
                    {{#unless succesfulLogin}}
                      <li><a href="#" data-toggle="modal" data-target="#log-in">Login</a></li>
                      <li><a href="#" data-toggle="modal" data-target="#sign-up">Sign up</a></li>
                    {{/unless}}
                    {{#if succesfulLogin}}
                      <li><a href="#" {{action "logout"}}>Logout</a></li>
                    {{/if}}
                  </ul>
            
                </div>
              </div>
            </nav>
             {{#if succesfulRegistration}}
              <div class="alert alert-success">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>Success!</strong> Please log in!
              </div>
              {{/if}}
              
              {{#if succesfulLogin}}
              <div class="alert alert-success" id="login-success">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>Successfull login!</strong>
              </div>
              {{/if}}

            <div id="bodyContent">
              
              {{outlet}}
              <!-- Sign-up Modal ----------------------------------------------->
              <div id="sign-up" class="modal fade" role="dialog">
                <div class="modal-dialog">
              
                  <!-- Modal content-->
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal">&times;</button>
                      <h4 class="modal-title">Sign Up</h4>
                    </div>
                    <form role="form">
                    <div class="modal-body">
                      
                        <div class="form-group">
                          <label for="email">Email address:</label>
                          <input type="email" class="form-control" id="email" required>
                          <div class="alert alert-danger" id="email-error" hidden>
                            <p></p>
                          </div>
                        </div>
                        <div class="form-group">
                          <label for="pwd">Password:</label>
                          <input type="password" class="form-control" id="pwd" required>
                          <div class="alert alert-danger" id="pwd-error" hidden>
                            <p></p>
                          </div>
                        </div>
                        <div class="form-group">
                          <label for="conf-pwd">Password Confirmation:</label>
                          <input type="password" class="form-control" id="conf-pwd" required>
                          <div class="alert alert-danger" id="pwd-conf-error" hidden>
                            <p></p>
                          </div>
                        </div>
                      
                      
                    </div>
                    <div class="modal-footer">
                        <button type="submit" {{action "send"}} class="btn btn-primary">Submit</button>
                      <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                    </div>
                    </form>
                  </div>
              
                </div>
              </div>
              <!-- End sign-up modal -------------------------------------------------->
              
              <!-- Log-in Modal ----------------------------------------------->
              <div id="log-in" class="modal fade" role="dialog">
                <div class="modal-dialog">
              
                  <!-- Modal content-->
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal">&times;</button>
                      <h4 class="modal-title">Sign Up</h4>
                    </div>
                    <form role="form">
                    <div class="modal-body">
                        
                        <div class="alert alert-danger" id="login-error" hidden>
                            <p></p>
                        </div>
                        <div class="form-group">
                          <label for="email">Email address:</label>
                          <input type="email" class="form-control" id="login-email" required>
                        </div>
                        <div class="form-group">
                          <label for="pwd">Password:</label>
                          <input type="password" class="form-control" id="login-pwd" required>
                        </div>
                      
                    </div>
                    <div class="modal-footer">
                        <button type="submit" {{action "login"}} class="btn btn-primary">Submit</button>
                      <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                    </div>
                    </form>
                  </div>
              
                </div>
              </div>
              <!-- End log-in modal -------------------------------------------------->
            </div>

        </div>
    </div>
</div>
